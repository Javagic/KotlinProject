<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="article"
            type="com.ilya.portfolioproject.ArticlesItem"/>
        <variable
            name="click"
            type="com.ilya.portfolioproject.OnArticleItemHandler"/>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{click.onItemClick}"
    >

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:previewImage="@{article.previewImage}"
        />
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/photo_image"
        android:text="@{article.title}"
        tools:text="Title"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/photo_image"
        android:textColor="@color/gray400"
        android:layout_below="@+id/item_title"
        android:text="@{article.date}"
        tools:text="00:00:00"
        />
</RelativeLayout>
</layout>